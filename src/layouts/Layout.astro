---
import NavigationLinks from '../components/NavigationLinks.astro';

import { Icon } from 'astro-icon'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-mono">
		<main class="md:container md:mx-auto w-full min-h-screen">
			<header class="flex items-center justify-center py-6 font-medium">
				<nav class="flex items-center justify-center gap-x-4 text-2xl">
					<NavigationLinks />
				</nav>
				<nav class="px-5"><Icon name="wi:solar-eclipse" width="28" height="28"/></nav>
			</header>
			<article>
				<slot />
			</article>
			<footer></footer>
		</main>		
	</body>
</html>
